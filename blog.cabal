                     bytestring,
                     blaze-html,
                     transformers,
                     time,
                     postgresql-simple,
                     postgresql-simple-migration,
                     cheapskate,
                     blaze-builder,
                     blaze-markup,
                     vector,
                     aeson,
                     random,
                     hjsmin,
                     css-text,
                     bcrypt,
                     cryptohash,
                     base16-bytestring,
                     attoparsec,
                     data-default,
                     optparse-applicative,
                     unix,
                     stm,
                     directory,
                     mtl,
                     tls,
                     fsnotify,
                     hashtables,
                     directory,
                     filepath