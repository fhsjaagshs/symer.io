                     transformers,
                     time,
                     postgresql-simple,
                     postgresql-simple-migration,
                     hedis,
                     cheapskate,
                     blaze-builder,
                     vector,
                     aeson,
                     random,
                     time-lens,
                     hjsmin,
                     css-text,
                     bcrypt,
                     pureMD5,
                     parsec,
                     data-default,
                     unordered-containers,
                     scotty-tls,
                     hdaemonize,
                     optparse-applicative,
                     terminal-size,
                     unix,
                     stm,
                     directory,
                     mtl,
                     cereal,
                     hsyslog